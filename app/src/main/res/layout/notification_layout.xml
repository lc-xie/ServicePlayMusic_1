<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#50000000"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="-3dp"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/notification_photo"
            android:src="@drawable/voicetest"
            android:layout_marginStart="1dp"
            android:layout_centerVertical="true"
            android:layout_width="80dp"
            android:layout_height="40dp"
            />
        <LinearLayout
            android:id="@+id/notification_linear_text"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/notification_photo"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/notification_voice_name"
                android:text="一个人要像一支队伍"
                android:textColor="#ffffff"
                android:textSize="@dimen/notification_voice_name_size"
                android:textStyle="bold"
                android:gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/notification_voice_author"
                android:text="作者：刘瑜   主播：留儿"
                android:textColor="#ffffff"
                android:textSize="@dimen/notification_voice_author_size"
                android:gravity="top"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/notification_linear_image"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notification_play"
                android:background="@drawable/notification_play_bkg"
                android:src="@drawable/notification_voice_play"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:id="@+id/notification_close"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/notification_close"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>